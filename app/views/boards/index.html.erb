<div class="main">
  <%= image_tag("borads_top.jpg")%>
  <div>
    <% @boards.each do |board| %>
      <%= link_to "【" + board.stock_id.to_s+ "】" + board.title + "  ", board %>
    <% end %>
  </div>
  




  <h1>==↓管理画面===</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Stock</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @boards.each do |board| %>
    <tr>
      <td><%= board.title %></td>
      <td><%= board.stock_id %></td>
      <td><%= link_to 'Show', board %></td>
      <td><%= link_to 'Edit', edit_board_path(board) %></td>
      <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
  <br />
  <%= link_to 'New Board', new_board_path %>
</div>