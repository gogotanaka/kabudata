<div class="main">
  <%= image_tag("borads_kobetu.jpg")%>
  <p id="notice"><%= notice %></p>

  <p>
    <b>Title:</b>
    <%= @board.title %>
  </p>

  <p>
    <b>Stock:</b>
    <%= @board.stock_id %>
  </p>
  <% @board.comments.each do |comment| %>
    <%= comment.sender %>より<%= comment.created_at %><br>
    <%= comment.contents %>
  <% end %>
  <% @comment = Comment.new %>
  <%= form_for(@comment, url: post_comment_board_path(@board.id)) do |f| %>
    <div class="field">
      お名前:<%= f.text_field :sender %>
    </div>
    <div class="field">
      内容<br />
      <%= f.text_area :contents, :size => "50x10" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

    
  <% end %>
</div>