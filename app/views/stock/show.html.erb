<%= @twitte %>
<div class="stock_container">
  <% stock = @stock %>
  <div class="stock_topic">
    <h1>[<%= stock.code %>]&nbsp;<%= stock.name %></h1>
    <h2>マザーズ&nbsp;電気機器</h2>
    <h3>半導体外観検査措置メーカー。精密基盤パターン装置に進出。</h3>
  </div>
  <div id="stock_info" class="clearfix">
    <div id="stock_table">
      <table class="">
        <tr><td>現在株価</td><td class="font_blod stock_table_td_align"><%= stock.price %></td></tr>
        <tr><td>前日比</td><td class="stock_table_td_align"><%= stock.code %></td></tr>
        <tr><td>前日終値</td><td class="stock_table_td_align"><%= stock.previousprice %></td></tr>
        <tr><td>始値</td><td class="stock_table_td_align"><%= stock.opening %></td></tr>
        <tr><td>高値</td><td class="stock_table_td_align"><%= stock.high %></td></tr>
        <tr><td>安値</td><td class="stock_table_td_align"><%= stock.low %></td></tr>
        <tr><td>出来高</td><td class="stock_table_td_align"><%= stock.volume %></td></tr>
        <tr><td>売買代金</td><td class="stock_table_td_align"><%= stock.code %></td></tr>
      </table>
    </div>
    <div id="stock_chart_box">
      <%= image_tag(stock.chart)%>
    </div>
  </div>
  <% if false %><%= image_tag('stock_pickup.jpg')%><% end %>
  <div class="twitter_stream">
    <div class="topic_img">
      <%= image_tag 'stock_blog.jpg', width: "678px"%>
      <h2>[6556]&nbsp;<%= stock.name %>に関する投資家ブログ情報</h2>
    </div>
    <div class="tweet">
      <% @twitter.each do |item| %>
        <div>
          <%= item[0].html_safe %><br>
          <%= item[1] %>
        </div><br>
      <% end %>
    </div>
  </div>
  <div class="twitter_stream">
    <div class="topic_img">
      <%= image_tag 'stock_twitter.jpg', width: "678px"%>
      <h2>[6556]&nbsp;<%= stock.name %>に関するtwitterのつぶやき</h2>
    </div>
    <div class="tweet">
      <% @twitter.each do |item| %>
        <div>
          <%= item[0].html_safe %><br>
          <%= item[1] %>
        </div><br>
      <% end %>
    </div>
  </div>
  <div class="twitter_stream">
    <div class="topic_img">
      <%= image_tag 'stock_borad.jpg', width: "678px"%>
      <h2>[6556]&nbsp;<%= stock.name %>の当サイトの掲示板</h2>
    </div>
    <div class="tweet">
      <% @twitter.each do |item| %>
        <div>
          <%= item[0].html_safe %><br>
          <%= item[1] %>
        </div><br>
      <% end %>
    </div>
  </div>
  <% if false %><%= image_tag('stock_2ch.jpg')%><% end %>
  <div class="twitter_stream">
    <div class="topic_img">
      <%= image_tag 'stock_2ch2.jpg', width: "678px"%>
      <h2>[6556]&nbsp;<%= stock.name %>に関する個別銘柄板</h2>
    </div>
    <div class="tweet">
      <% @twitter.each do |item| %>
        <div>
          <%= item[0].html_safe %><br>
          <%= item[1] %>
        </div><br>
      <% end %>
    </div>
  </div>
  <div class="twitter_stream">
    <div class="topic_img">
      <%= image_tag 'stock_textream.jpg', width: "678px"%>
      <h2>[6556]&nbsp;<%= stock.name %>に関するYahoo株式textream</h2>
    </div>
    <div class="tweet">
      <div class="yahoo">
        <% @yahoo.each do |item| %>
          <div class="contribution">
            <h2 class="title"><%= item[0] %></h2>
            <div class="send">
              <%= item[1] %>　<span class="time"><%= item[2] %></span>　<%= item[3] %>
            </div>
            <%= item[4].html_safe %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>